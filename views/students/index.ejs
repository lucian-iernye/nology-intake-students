<h2 class="page-header">Search Student</h2>
<form action="/students" method="GET">
  <div class="form-row">
    <div class="form-item">
      <label for="name">Name</label>
      <input type="text" name="name" value="<%= searchOptions.name %> " />
    </div>
  </div>
  <div class="form-row">
    <div class="form-item">
      <label for="name">Enrolled After</label>
      <input
        type="date"
        name="enrolledAfter"
        value="<%= searchOptions.enrolledAfter %> "
      />
    </div>
    <div class="form-item">
      <label for="name">Enrolled Before</label>
      <input
        type="date"
        name="enrolledBefore"
        value="<%= searchOptions.enrolledBefore %> "
      />
    </div>
  </div>
  <div class="form-row form-row-end">
    <button class="btn btn-primary" type="submit">Search</button>
  </div>
</form>
<br />
<!-- display the intake name for each intake created -->
<%- include ("../partials/studentGrid", { students: students, large: true}) %>
