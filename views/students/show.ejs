<h2 class="page-header"><%= student.name %></h2>
<div class="student-details">
  <div>
    <img
      class="student-cover"
      src="<%= student.coverImagePath %> "
      alt="<%= student.name %> "
    />
    <div class="student-details-btn-grid">
      <a class="btn btn-primary" href="/students/<%= student.id %>/edit"
        >Edit</a
      >
      <%- include("../partials/deleteForm", {url: `/students/${student.id}`}) %>
      <a
        class="btn btn-primary student-details-intake-button"
        href="/intakes/<%= student.intake.id %>"
        >View Intake</a
      >
    </div>
  </div>
  <div class="student-details-grid">
    <div class="student-details-label">Intake:</div>
    <div><%= student.intake.name %></div>
    <div class="student-details-label">Enrolment Date:</div>
    <div><%= student.enrolmentDate.toDateString() %></div>
    <div class="student-details-label">Date of Birth:</div>
    <div><%= student.dateOfBirth.toDateString() %></div>
    <div class="student-details-label">Age:</div>
    <%= student.age %>
    <div class="student-details-label">About:</div>
    <%= student.about %>
  </div>
</div>
