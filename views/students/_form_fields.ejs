<div class="form-row">
  <div class="form-item">
    <label for="name">Title</label>
    <!-- we included the ejs code so we can import dinamicaly the title of the current student -->
    <input type="text" name="title" value="<%=student.title %>" />
  </div>
  <div class="form-item">
    <label for="intake">Intake</label>
    <select name="intake" id="">
      <!-- foreach function -->
      <% intakes.forEach(intake => { %>
      <!-- if this -->
      <% if (intake.id === student.intake) { %>
      <!-- do this -->
      <option
        selected
        label="<%= intake.name %>"
        value="<%= intake.id %>"
      ></option>
      <!-- else  -->
      <% } else { %>
      <!-- do this -->
      <option label="<%= intake.name %>" value="<%= intake.id %>"></option>
      <!-- end of if statement -->
      <% } %>
      <!-- end of forEach function -->
      <% }) %>
    </select>
  </div>
</div>

<div class="form-row">
  <div class="form-item">
    <label for="title">Publish Date</label>
    <input type="date" name="publishDate" id="" value="<%= student.publishDate
    == null ? "" : student.publishDate.toISOString().split("T")[0] %>">
  </div>
  <div class="form-item">
    <label for="title">Page Count</label>
    <input
      type="number"
      name="pageCount"
      id=""
      min="1"
      value="<%= student.pageCount %>"
    />
  </div>
</div>

<div class="form-row">
  <div class="form-item form-item-no-grow">
    <label for="title">Cover</label>
    <input class="student-cover filepond" type="file" name="cover" />
  </div>
  <div class="form-item">
    <label for="title">Description</label>
    <textarea name="description" id="" cols="30" rows="10">
<%= student.description %></textarea
    >
  </div>
</div>
